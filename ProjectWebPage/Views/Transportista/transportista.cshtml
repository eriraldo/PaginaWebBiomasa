@model ProjectWebPage.Models.Login
@{
    ViewBag.Title = "Transportista";
}
<h2>@ViewBag.Title</h2>
@using (Html.BeginForm("Transportista", "Transportista", FormMethod.Post))
{
    <div>
        <table>
            <tr>
                <td>
                    Usuario:
                    @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                    Contrasena:
                    @Html.EditorFor(model => model.contrasena, new { htmlAttributes = new { @class = "form-control" } })
                    <br />
                    <input type="submit" value="Login" />
                    @Html.ActionLink("Crear nuevo Usuario", "NuevoUsuario")


                </td>
            </tr>
        </table>
    </div>
}